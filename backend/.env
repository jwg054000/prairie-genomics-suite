# Prairie Genomics Suite - Backend Configuration
# Basic setup for local development

# Database Configuration - Using local MongoDB for simplicity
MONGODB_URI=mongodb://localhost:27017/prairie-genomics

# JWT Secret 
JWT_SECRET=prairie-genomics-development-secret-2024

# Server Configuration
PORT=4000
NODE_ENV=development

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5368709120

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Application Metadata
APP_NAME=Prairie Genomics Suite
APP_VERSION=1.0.0
APP_DESCRIPTION=Making genomics analysis accessible to every researcher

# Security Settings
SESSION_SECRET=prairie-session-secret-2024
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Analysis Configuration
MAX_CONCURRENT_ANALYSES=5
ANALYSIS_TIMEOUT=3600000
CLEANUP_INTERVAL=86400000

# Pipeline Configuration  
PIPELINE_CACHE_TTL=3600
DEFAULT_COMPUTE_RESOURCES=small

# Development Settings
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_INTROSPECTION=true
DEBUG_MODE=true